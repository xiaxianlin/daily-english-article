# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# MongoDB
MONGODB_URI=mongodb://localhost:27017/daily-english-article

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# LLM Provider (zhipu/qwen/openai)
LLM_PROVIDER=zhipu
LLM_API_KEY=your-llm-api-key

# Zhipu AI (if using zhipu)
ZHIPU_API_KEY=your-zhipu-api-key
ZHIPU_MODEL=glm-4

# Qwen / DashScope (if using qwen)
QWEN_API_KEY=your-qwen-api-key
QWEN_MODEL=qwen-max

# OpenAI (if using openai)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# CORS
CORS_ORIGIN=http://localhost:4200
