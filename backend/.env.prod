# Application Configuration
NODE_ENV=production
PORT=3000

# MongoDB Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=your_secure_password_here
MONGODB_DATABASE=daily-english-article
MONGODB_PORT=27017

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# LLM Provider Configuration
# Options: 'zhipu', 'qwen', 'openai'
LLM_PROVIDER=zhipu

# Zhipu AI Configuration
LLM_ZHIPU_API_KEY=your_zhipu_api_key
LLM_ZHIPU_MODEL=glm-4

# Qwen (Alibaba) Configuration
LLM_QWEN_API_KEY=your_qwen_api_key
LLM_QWEN_MODEL=qwen-max

# OpenAI Configuration (fallback)
LLM_OPENAI_API_KEY=your_openai_api_key
LLM_OPENAI_MODEL=gpt-4

# Nginx Configuration
NGINX_PORT=80
